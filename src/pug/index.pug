                      .provider-if
                        .mona-content
                          ul
                            li Số lượng: 1.630
                            li Diện tích: 88 – 211 m2
                            li Chiều cao: 4 tầng
                  .swiper-slide(data-aos="fade-up" data-aos-delay="600")
                    .provider-card
